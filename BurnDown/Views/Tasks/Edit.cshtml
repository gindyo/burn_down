@model BurnDown.Models.task

@{
    ViewBag.Title = "Create";
}

@section JavaScript{
    
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
    

 <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script>

    $(document).ready(
   function () {
       $("#startDate").datepicker();
       $("#dueDate").datepicker();
   });
   
       
   
    
</script>

}

<h2>Edit @Html.DisplayFor(model => model.taskName)</h2>


  <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
  

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Html.DisplayFor(model => model.taskName)</legend>
    <table style="border:none" ><tr>
    <td style="border:none">
       <div class="editor-label">
            @Html.LabelFor(model => model.taskName,"Task Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.taskName)
            @Html.ValidationMessageFor(model => model.taskName, "Task Name")
        </div>

         <div class="editor-label">
         @Html.Label("Assigned To")
         </div>
         <div class="editor-field">
         @Html.DropDownList("developer_developerId")   
        </div>  
      
        <div class="editor-label">
         @Html.Label("Project")
         </div>
         <div class="editor-field">
         @Html.DropDownList("project")   
        </div>   

        <div class="editor-label">
            @Html.LabelFor(model => model.originalEstimatedHours, "Original Time to Complete Estimation (in hours)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.originalEstimatedHours)
            @Html.ValidationMessageFor(model => model.originalEstimatedHours, "Original Time to Complete Estimation (in hours) is required")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.hoursSpentOnTask, "Hours Spent on Task")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.hoursSpentOnTask)
            @Html.ValidationMessageFor(model => model.hoursSpentOnTask, "Hours Spent on Task is required")
        </div>

      </td>
    <td style="border:none; padding-left:30px;"> 

        <div class="editor-label">
            @Html.LabelFor(model => model.shareOfProject, "Percantage Share From Project")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.shareOfProject)
            @Html.ValidationMessageFor(model => model.shareOfProject, "Percantage Share From Project is required")
        </div>
   
        <div class="editor-label">
            @Html.LabelFor(model => model.percentCompleted, "Percentage Copmelted")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.percentCompleted)
            @Html.ValidationMessageFor(model => model.percentCompleted, "Percentage Copmelted is required")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.priority, "Priority")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.priority)
            @Html.ValidationMessageFor(model => model.priority)
        </div>

        

        <div class="editor-label">
            @Html.LabelFor(model => model.startDate, "Start Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.startDate)
            @Html.ValidationMessageFor(model => model.startDate, "Start Date is required")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dueDate, "Due Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dueDate)
            @Html.ValidationMessageFor(model => model.dueDate, "Due Date is required")
    </div>
    </td>
        </tr></table>
        <p>
            <input type="submit" value="Edit" />
        </p>
    </fieldset>
}

